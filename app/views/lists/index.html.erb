<% content_for :title, "Lists" %>

<h1>My To-do List</h1>

<div id="lists" class="mt-4">
    <table class="table table-bordered">
        <tbody>
            <% @lists.each_with_index do |list, index| %>
                <tr class="<%= index.even? ? 'table-secondary' : '' %>">
                    <td class="<%= list.completed ? 'striker' : '' %>"><%= link_to list.description, edit_list_path(list) %></td>
                    <td>
                        <% link_to "Show", list %>
                        <% link_to "Edit", edit_list_path(list) %>
                        <%= button_to "Delete", list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>