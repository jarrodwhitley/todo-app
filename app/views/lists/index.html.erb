<% content_for :title, "Lists" %>

<h1>Lists</h1>

 <center>
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <%= render 'form_index', list: @list %>
        </div>
    </div>
 </center>

<div id="lists">
    <table class="table table-bordered">
        <tbody>
            <% @lists.each_with_index do |list, index| %>
                <tr class="<%= index.even? ? 'table-secondary' : '' %>">
                    <td class="<%= list.completed ? 'striker' : '' %>"><%= link_to list.description, edit_list_path(list) %></td>
                    <td>
                        <% link_to "Show", list %>
                        <% link_to "Edit", edit_list_path(list) %>
                        <%= button_to "Delete", list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<%= link_to "Add a to-do item", new_list_path, class: 'btn btn-primary' %>
